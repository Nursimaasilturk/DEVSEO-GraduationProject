{
  "name": "devseo",
  "displayName": "devseo",
  "description": "An extension for support about SEO-Friendly coding process",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
"activationEvents": [
    "onStartupFinished"
],

  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devseo.devseo",
        "title": "Start Devseo"
      },
      {
        "command": "devseo.readPage",
        "title": "Sayfa içeriğini al"
      },{
        "command": "devseo.readAllPages",
        "title" : "Tüm HTML Sayfaları Tara"
      },
      {
        "command": "devseo.status",
        "title": "Status bar message"
      }
    ], 
    "icons": {
      "devseo-status-bar-icon": {
        "icon": "assets/images/status-bar-icon.png",
        "description": "Custom icon for DevSEO",
        "default": {
          "fontPath": "codicons.ttf", 
          "fontCharacter": "\uE271" 
        }
      }
    }, 
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Package Explorer",
          "icon": "resources/package-explorer.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "nodeDependencies",
          "name": "Node Dependencies",
          "when": "workspaceHasPackageJSON",
          "icon": "media/dep.svg",
          "contextualTitle": "Package Explorer"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "openai": "^4.24.7",
    "pdfkit": "^0.14.0",
    "puppeteer": "^21.6.1"
  }
}
